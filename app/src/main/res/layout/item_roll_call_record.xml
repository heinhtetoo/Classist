<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:layout_marginBottom="@dimen/margin_medium"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_roll_call_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_textview"
        android:layout_margin="@dimen/margin_large"
        android:text="@string/default_month"
        android:fontFamily="@font/roboto"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />

    <TextView
        android:layout_alignBaseline="@id/tv_roll_call_date"
        android:id="@+id/tv_roll_call_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:layout_toEndOf="@id/tv_roll_call_date"
        android:text="Present"
        android:fontFamily="@font/roboto"
        android:textColor="@color/correct"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="normal" />

</RelativeLayout>